<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <data>
        <variable
            name="viewModel"
            type="com.example.along.scmusic.screen.seemore.SeeMoreMusicViewModel"
            />
    </data>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayoutSeeMoreMusic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/color_orange"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationIcon="?android:homeAsUpIndicator"
            app:title="@{viewModel.mGenreObservable}"
            app:titleTextColor="@android:color/white"
            />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerGenre"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:clipToPadding="false"
            app:layoutManager="GridLayoutManager"
            app:layout_constraintBottom_toTopOf="@id/relative_see_more"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolBar"
            app:onScrollListener="@{viewModel.getEndlessScrollListener(recyclerGenre.getLayoutManager())}"
            app:setAdapter="@{viewModel.adapter}"
            app:spanCount="2"
            />
        <!--<ProgressBar-->
            <!--android:layout_marginTop="@dimen/dp_10"-->
            <!--android:background="@android:color/transparent"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:indeterminate="true"-->
            <!--android:id="@+id/progress"-->
            <!--android:theme="@style/colorProgress"-->
            <!--app:layout_constraintBottom_toBottomOf="parent"-->
            <!--app:layout_constraintLeft_toLeftOf="parent"-->
            <!--app:layout_constraintRight_toRightOf="parent"-->
            <!--app:layout_constraintTop_toBottomOf="@id/recyclerGenre"-->
            <!--android:visibility="@{viewModel.mIsLoading, default = gone}"-->
            <!--/>-->
        <RelativeLayout
            android:id="@+id/relative_see_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_grayish"
            android:padding="@dimen/dp_5"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageTrack"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginStart="@dimen/dp_5"

                />

            <TextView
                android:id="@+id/textTrackTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_toEndOf="@id/imageTrack"
                android:layout_toRightOf="@id/imageTrack"
                android:maxLength="25"
                android:maxLines="1"

                android:textColor="@android:color/black"
                android:textSize="@dimen/sp_14"
                />
            <TextView
                android:id="@+id/textArtistName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textTrackTitle"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_toEndOf="@id/imageTrack"
                android:layout_toRightOf="@id/imageTrack"
                android:maxLines="1"

                android:textSize="@dimen/sp_13"
                />


            <ImageButton
                android:id="@+id/image_previous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_toLeftOf="@id/image_play"
                android:layout_toStartOf="@id/image_play"
                android:background="@android:color/transparent"
                android:tint="@android:color/black"
                app:srcCompat="@drawable/ic_skip_previous"
                tools:ignore="ContentDescription"
                />
            <ImageButton
                android:id="@+id/image_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_toLeftOf="@id/image_next"
                android:layout_toStartOf="@id/image_next"
                android:background="@android:color/transparent"
                android:tint="@android:color/black"
                app:srcCompat="@drawable/ic_play_arrow"
                tools:ignore="ContentDescription"
                />
            <ImageButton
                android:id="@+id/image_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:tint="@android:color/black"
                app:srcCompat="@drawable/ic_skip_next"
                tools:ignore="ContentDescription"

                />
        </RelativeLayout>
    </android.support.constraint.ConstraintLayout>
</layout>
