<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewModel"
            type="com.example.along.scmusic.screen.search.ItemSearchViewModel"
            />
    </data>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp_0.6"
        android:onClick="@{viewModel::onItemClicked}"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/image_track"
                android:layout_width="@dimen/dp_110"
                android:layout_height="@dimen/dp_80"
                android:padding="@dimen/dp_5"
                android:scaleType="fitXY"
                tools:ignore="ContentDescription"
                url="@{viewModel.mTrackObservableField.artworkUrl}"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_5"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/text_track_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/sp_15"
                    android:textStyle="bold"
                    android:text="@{viewModel.mTrackObservableField.title}"
                    />
                <TextView
                    android:id="@+id/text_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:textSize="@dimen/sp_13"
                    android:text="@{viewModel.mTrackObservableField.user.username}"
                    />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.6"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@color/color_gray"
            />
    </LinearLayout>
</layout>
