<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <data>
        <variable
            name="viewModel"
            type="com.example.along.scmusic.screen.main.MainViewModel"
            />
    </data>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayoutMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <android.support.design.widget.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@color/color_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:tabGravity="fill"
            app:tabMode="fixed"
            app:viewPager="@{viewpager}"
            />

        <com.example.along.scmusic.widget.viewpager.UnSwipeViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/color_white"
            app:adapter="@{viewModel.adapter}"
            app:layout_constraintBottom_toTopOf="@id/tab_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:offscreenPageLimit="@{viewModel.OFF_SCREEN_PAGE_LIMIT}"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_grayish"
            android:padding="@dimen/dp_5"
            android:visibility="@{viewModel.mTrackVisibility, default = gone}"
            app:layout_constraintBottom_toTopOf="@id/tab_layout"
            app:layout_constraintLeft_toLeftOf="parent"
            android:onClick="@{() -> viewModel.onShowFragment()}"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageTrack"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginStart="@dimen/dp_5"
                url="@{viewModel.mTrackObservableField.artworkUrl}"
                />

            <TextView
                android:id="@+id/textTrackTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_toEndOf="@id/imageTrack"
                android:layout_toRightOf="@id/imageTrack"
                android:maxLength="25"
                android:maxLines="1"
                android:text="@{viewModel.mTrackObservableField.title}"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sp_14"
                />
            <TextView
                android:id="@+id/textArtistName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textTrackTitle"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_toEndOf="@id/imageTrack"
                android:layout_toRightOf="@id/imageTrack"
                android:maxLines="1"
                android:text="@{viewModel.mTrackObservableField.getUser().getUsername()}"
                android:textSize="@dimen/sp_13"
                />


            <ImageButton
                android:id="@+id/image_previous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_toLeftOf="@id/image_play"
                android:layout_toStartOf="@id/image_play"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/ic_skip_previous"
                tools:ignore="ContentDescription"
                android:tint="@android:color/black"
                />
            <ImageButton
                android:id="@+id/image_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_toLeftOf="@id/image_next"
                android:layout_toStartOf="@id/image_next"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/ic_play_arrow"
                tools:ignore="ContentDescription"
                android:tint="@android:color/black"
                />
            <ImageButton
                android:id="@+id/image_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/ic_skip_next"
                android:tint="@android:color/black"
                tools:ignore="ContentDescription"
                android:onClick="@{() -> viewModel.onNextTrack()}"
                />
        </RelativeLayout>
    </android.support.constraint.ConstraintLayout>
</layout>
